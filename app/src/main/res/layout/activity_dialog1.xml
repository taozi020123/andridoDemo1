<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialog1">

    <Button
        android:id="@+id/button_pt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="38dp"
        android:text="普通对话框"
        android:background="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/button11_dx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button11_dx"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:text="单选对话框"
        android:background="@color/teal_700"
        app:layout_constraintBottom_toTopOf="@+id/button12_mx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_pt" />

    <Button
        android:id="@+id/button12_mx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:text="多选对话框"
        android:background="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/button13_jd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button11_dx" />

    <Button
        android:id="@+id/button13_jd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="337dp"
        android:text="进度条对话框"
        android:background="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button12_mx" />
</androidx.constraintlayout.widget.ConstraintLayout>